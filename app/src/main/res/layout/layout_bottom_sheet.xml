<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_back"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="200dp"
    android:paddingBottom="30dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

  <ScrollView
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/bottomSheetGrapple"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:src="@drawable/ic_bottom_sheet_grapple"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:id="@+id/stepper1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="50dp"
          android:layout_marginTop="36dp"
          android:src="@drawable/ic_stepper_image"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textcode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="25dp"
          android:text="Pick up"
          android:textColor="@color/black"
          app:layout_constraintStart_toEndOf="@+id/stepper1"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textcode1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="45dp"
          android:text="571, Hamper Ave"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:textStyle="bold|italic"
          app:layout_constraintStart_toEndOf="@+id/stepper1"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textcode5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="70dp"
          android:layout_marginTop="45dp"
          android:layout_marginEnd="35dp"
          android:text="Nairobi, Avenue"
          android:textColor="#938B8B"
          android:textSize="13sp"
          android:textStyle="italic"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/textcode1"
          app:layout_constraintTop_toTopOf="parent" />

      <View
          android:layout_width="2dp"
          android:layout_height="90dp"
          android:layout_marginStart="62dp"
          android:layout_marginTop="64dp"
          android:background="#47938B8B"
          app:layout_constraintBottom_toTopOf="@+id/stepper2"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/stepper1"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:id="@+id/stepper2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="52dp"
          android:layout_marginTop="140dp"
          android:src="@drawable/ic_stepper_image_2"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textcode2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="130dp"
          android:text="Drop at"
          android:textColor="@color/black"
          app:layout_constraintStart_toEndOf="@+id/stepper2"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textcode3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="145dp"
          android:text="37, Grand Plaza"
          android:textColor="@color/black"
          android:textSize="16sp"
          android:textStyle="bold|italic"
          app:layout_constraintStart_toEndOf="@+id/stepper2"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textcode4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="70dp"
          android:layout_marginTop="145dp"
          android:layout_marginEnd="35dp"
          android:text="Nairobi, CBD"
          android:textColor="#938B8B"
          android:textSize="13sp"
          android:textStyle="italic"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/textcode3"
          app:layout_constraintTop_toTopOf="parent" />

      <View
          android:id="@+id/view2"
          android:layout_width="370dp"
          android:layout_height="1dp"
          android:layout_margin="26dp"
          android:background="#47938B8B"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textcode4" />


      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@id/constraint"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/view2">

        <TextView
            android:id="@+id/totalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Total Cost"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txt_total_cost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="7dp"
            android:text="$46.90"
            android:textColor="#34E25B"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/totalCost"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pkg_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Package Weight"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/totalCost"
            app:layout_constraintTop_toBottomOf="@+id/totalCost" />

        <TextView
            android:id="@+id/txt_pkg_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1.5kg"
            android:textColor="#12ADEF"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/txt_total_cost"
            app:layout_constraintTop_toBottomOf="@+id/txt_total_cost" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <TextView
          android:id="@+id/contact_Sender"
          android:layout_width="140dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          android:background="@drawable/btn"
          android:padding="10dp"
          android:text="Contact Sender"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textAllCaps="false"
          android:textColor="@color/black"
          app:layout_constraintEnd_toStartOf="@id/contact_receiver"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/constraint" />

      <TextView
          android:id="@+id/contact_receiver"
          android:layout_width="140dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          android:background="@drawable/btn"
          android:padding="10dp"
          android:text="Contact Receiver"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textAllCaps="false"
          android:textColor="@color/black"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/contact_Sender"
          app:layout_constraintTop_toBottomOf="@+id/constraint" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>